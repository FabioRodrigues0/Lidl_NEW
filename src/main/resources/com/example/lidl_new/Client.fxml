<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="613.0" prefWidth="845.0" spacing="5.0"
      xmlns="http://javafx.com/javafx/11.0.2" fx:controller="com.example.lidl_new.Controller.ClientController">
    <children>
        <VBox maxHeight="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="NEVER">
            <children>
                <Button id="btCreateClient" minHeight="30.0" minWidth="200.0" mnemonicParsing="false"
                        onAction="#onCreateClient" prefHeight="30.0" prefWidth="290.0" text="Criar Cliente"/>
                <HBox prefHeight="32.0" prefWidth="230.0">
                    <children>
                        <TextField fx:id="txtClientID" minHeight="30.0" minWidth="200.0" prefHeight="30.0"
                                   prefWidth="250.0" promptText="Nº Cartao Cliente"/>
                        <Button id="btConsultarCompras" fx:id="btSearchInvoices" minHeight="30.0" minWidth="30.0"
                                mnemonicParsing="false" onAction="#onSearchInvoices" textAlignment="CENTER">
                            <font>
                                <Font name="Material Icons" size="14.0"/>
                            </font>
                            <graphic>
                                <FontIcon iconLiteral="fa-search"/>
                            </graphic>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="30.0" prefWidth="230.0">
                    <children>
                        <Label minHeight="30.0" text="Pontos">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="clientPoints" editable="false" minHeight="30.0" prefHeight="30.0"
                                   prefWidth="177.0"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </HBox>
            </children>
            <HBox.margin>
                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
            </HBox.margin>
        </VBox>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="3.0" HBox.hgrow="ALWAYS">
            <children>
                <TableView fx:id="tbInvoice" onMouseClicked="#onListProductInvoices" prefHeight="300.0"
                           prefWidth="599.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colInvoiceID" editable="false" prefWidth="100.0" text="ID"/>
                        <TableColumn fx:id="colInvoiceTotal" editable="false" prefWidth="126.0" text="TOTAL COMPRA"/>
                        <TableColumn fx:id="colInvoiceDate" editable="false" prefWidth="128.0" text="DATA"/>
                    </columns>
                </TableView>
                <TableView fx:id="tbtbInvoiceProducts" prefHeight="350.0" prefWidth="599.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colInvoiceNameProduct" editable="false" prefWidth="236.0" text="PRODUTOS"/>
                        <TableColumn fx:id="colInvoiceQT" editable="false" prefWidth="46.0" text="QT"/>
                        <TableColumn fx:id="colInvoicePrice" editable="false" prefWidth="72.0" text="PREÇO"/>
                    </columns>
                </TableView>
            </children>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </VBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</HBox>
